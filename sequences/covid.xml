<santa xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="santa.xsd">
	<replicates>10</replicates>

	<simulation>
		<genome>
			<length>3822</length>
			<sequences>
				
			</sequences>
			<feature>
				<name>CDS</name>
				<type>aminoAcid</type>
				<coordinates>1-3822</coordinates>
			</feature>
		</genome>

		<population>
			<populationSize>10000</populationSize>

			<inoculum>all</inoculum>
		</population>

		<fitnessFunction>
            <neutralFitness>
	            <feature>CDS</feature>
	            <sites>1-203</sites>
            </neutralFitness>
        </fitnessFunction>

		<mutator>
			<nucleotideMutator>
				<mutationRate>1.0E-4</mutationRate>
				<transitionBias>2.0</transitionBias>
			</nucleotideMutator>
		</mutator>

		<replicator>
			<clonalReplicator/>
		</replicator>

		<epoch>
			<generationCount>1001</generationCount>
		</epoch>

		<samplingSchedule>
			<sampler>
				<atFrequency>100</atFrequency>
				<fileName>/santa/covid_%r.fasta</fileName>
				<alignment>
					<schedule>
						<!-- generation count -->
						200  10
						400  10
						600  10
						800  10
						1000  10
					</schedule>
					<format>FASTA</format>
					<label>covid_%g_%s</label>
				</alignment>
			</sampler>
			<sampler>
				<atFrequency>1</atFrequency>
				<fileName>/santa/covid_%r.csv</fileName>
				<statistics></statistics>
			</sampler>
		</samplingSchedule>

	</simulation>

</santa>
